@model Selling.ViewModel.MstUserViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@*<h2>Index</h2>
<h3>Hasil Redirecting dari Home</h3>*@

@using (Html.BeginForm())
{
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-4">
				@Html.LabelFor(model => model.Username, new { @class = "control-label" })
			</div>
			<div class="col-md-8">
				@Html.EditorFor(model => model.Username, new { @class="control-label" } )
			</div>
			
		</div>
		<div class="form-group">
			<div class="col-md-4">
				@Html.LabelFor(model => model.Password, new { @class = "control-label" })
			</div>
			<div class="col-md-8">
				@Html.EditorFor(model => model.Password, new { @class = "control-label" })
			</div>

		</div>
		<button id="idbtnLogin" type="button" class="btn btn-primary pull-right">
			Login
		</button>
	</div>
}
<script>
	$("#idbtnLogin").click(function () {
		var vUsername = $("#Username").val();
		var vPassword = $("#Password").val();
		$.ajax({
			url:'@Url.Action("Login","Login")',
			type:'POST',
			data: {
				Username: vUsername,
				Password: vPassword
			},
			success: function (model) {
			    debugger;
			    window.location.href = '/Home/Index';
				
			},
		    error: function (model) {
		        debugger;
		    }
		})
	});
</script>